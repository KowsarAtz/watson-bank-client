#:import C kivy.utils.get_color_from_hex
<ShowLogsPopUp>:

    orientation: 'vertical'
    spacing: '10'

    BoxLayout:
        size_hint: (1,1)

    MyButton:
        text: 'SHOW LAST 15'
        markup: True
        size_hint: (0.7, 1)
        pos_hint: {'center_x':0.5}
        on_release: root.showLastNLogsCallback(15)

    MyButton:
        text: 'SHOW LAST 10'
        markup: True
        size_hint: (0.7, 1)
        pos_hint: {'center_x':0.5}
        on_release: root.showLastNLogsCallback(10)

    MyTextInput:
        id: customRangeTextInput
        write_tab: False
        multiline: False
        hint_text: 'enter a custom range like 1-10'
        size_hint: (0.7, 1)
        pos_hint: {'center_x':0.5}

    MyButton:
        text: 'SHOW CUSTOM RANGE'
        markup: True
        size_hint: (0.7, 1)
        pos_hint: {'center_x':0.5}
        on_release: root.showRangeLogsCallback()

    BoxLayout:
        size_hint: (1, 1)