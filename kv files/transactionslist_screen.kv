#:import C kivy.utils.get_color_from_hex

<TransactionRow@RowBoxLayout>:
    index: ''
    transactionID: ''
    fromAccountNumber: ''
    toAccountNumber: ''
    amount: ''
    type: ''
    describtion: ''

    MyLabel:
        text: root.transactionID
        size_hint: (1,1)

    MyLabel:
        text: root.amount
        size_hint: (1,1)

    MyLabel:
        text: root.type
        size_hint: (0.5,1)
    
    MyLabel:
        text: root.fromAccountNumber
        size_hint: (2,1)
    
    MyLabel:
        text: root.toAccountNumber
        size_hint: (2,1)

    BubbleButton:
        text: '. . .'
        on_release: root.parent.parent.parent.showDescribtionCallback(root.describtion)
        size_hint: (0.5,1)

<TransactionsListScreen>:
    canvas:
        Color:
            rgba: C("#232130") 
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'vertical'

    BoxLayout:
        spacing: dp(5)
        orientation: 'horizontal'
        size_hint: (1, 0.11)
        padding: [10,20,10,0]

        MyButton:
            markup: True
            text: 'Back to Menu'
            size_hint: (1,1)
            on_release: root.backToMenuCallback()

        MyTextInput:
            hint_text: 'Search for Account Number or Transaction ID . . .'
            on_text: root.searchCallback(self.text)
            size_hint: (8,1)

    BoxLayout:
        spacing: dp(1)
        orientation: 'horizontal'
        size_hint: (1, 0.1)
        padding: [20,0,30,0]

        MyTitleLabel:
            markup: True
            text: 'Transaction ID'
            size_hint: (1,1)

        MyTitleLabel:
            markup: True
            text: 'Amount'
            size_hint: (1,1)

        MyTitleLabel:
            markup: True
            text: 'Type'
            size_hint: (0.5,1)
        
        MyTitleLabel:
            markup: True
            text: 'From Account'
            size_hint: (2,1)
        
        MyTitleLabel:
            markup: True
            text: 'To Account'
            size_hint: (2,1)

        MyTitleLabel:
            markup: True
            text: 'Info'
            size_hint: (0.5,1)

    RecycleView:
        id: rv
        scroll_type: ['bars', 'content']
        scroll_wheel_distance: dp(114)
        bar_width: dp(10)
        viewclass: 'TransactionRow'
        RecycleBoxLayout:
            padding: [20,0,30,20]
            default_size: None, dp(56)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'
            spacing: dp(4)