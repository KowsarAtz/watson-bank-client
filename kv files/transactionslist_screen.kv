#:import utils kivy.utils

<TransactionRow@BoxLayout>:
    index: ''
    transactionID: ''
    fromAccountNumber: ''
    toAccountNumber: ''
    amount: ''
    type: ''
    describtion: ''

    canvas.before:
        Color:
            rgba: utils.get_color_from_hex("#15234c") 
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        spacing: dp(1)
        orientation: 'horizontal'

        Label:
            text: root.transactionID
            size_hint: (1,1)

        Label:
            text: root.amount
            size_hint: (1,1)

        Label:
            text: root.type
            size_hint: (0.5,1)
        
        Label:
            text: root.fromAccountNumber
            size_hint: (2,1)
        
        Label:
            text: root.toAccountNumber
            size_hint: (2,1)

        BubbleButton:
            text: 'Click'
            on_release: root.parent.parent.parent.showDescribtionCallback(root.describtion)
            size_hint: (1,1)

<TransactionsListScreen>:
    canvas:
        Color:
            rgba: utils.get_color_from_hex("#0c1632") 
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'vertical'

    BoxLayout:
        spacing: dp(1)
        orientation: 'horizontal'
        size_hint: (1, 0.11)
        padding: [10,20,10,0]

        BubbleButton:
            text: 'Back to Menu'
            size_hint: (2,1)
            on_release: root.backToMenuCallback()

        TextInput:
            hint_text: 'Search for Account Number or Transaction ID . . .'
            on_text: root.searchCallback(self.text)
            size_hint: (8,1)

    BoxLayout:
        spacing: dp(1)
        orientation: 'horizontal'
        size_hint: (1, 0.1)
        padding: [20,0,30,0]

        Label:
            text: 'Transaction ID'
            size_hint: (1,1)

        Label:
            text: 'Amount'
            size_hint: (1,1)

        Label:
            text: 'Type'
            size_hint: (0.5,1)
        
        Label:
            text: 'From Account'
            size_hint: (2,1)
        
        Label:
            text: 'To Account'
            size_hint: (2,1)

        Label:
            text: 'Info'
            size_hint: (1,1)

    RecycleView:
        id: rv
        scroll_type: ['bars', 'content']
        scroll_wheel_distance: dp(114)
        bar_width: dp(10)
        viewclass: 'TransactionRow'
        RecycleBoxLayout:
            padding: [20,0,30,20]
            default_size: None, dp(56)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'
            spacing: dp(4)