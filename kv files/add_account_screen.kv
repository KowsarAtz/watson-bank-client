#:import C kivy.utils.get_color_from_hex
<AddAccountScreen>:
    canvas:
        Color:
            rgb: C("#232130") 
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'vertical'
    spacing: '10'
    BoxLayout:
        size_hint: (1,7)
    MyTextInput:
        id: nationalCodeTextInput
        write_tab: False
        multiline: False
        hint_text: 'enter the national code'
        size_hint: (0.3, 1)
        pos_hint: {'center_x':0.5}
    MyButton:
        markup: True
        text: 'ADD ACCOUNT'
        size_hint: (0.3, 1)
        pos_hint: {'center_x':0.5}
        on_release: root.addAccountCallback()
    MyButton:
        markup: True
        text: 'CANCEL'
        size_hint: (0.3, 1)
        pos_hint: {'center_x':0.5}
        on_release: root.cancelCallback()
    BoxLayout:
        size_hint: (1,7)