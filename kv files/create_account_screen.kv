#:import C kivy.utils.get_color_from_hex
<CreateAccountScreen>:
    canvas:
        Color:
            rgb: C("#232130") 
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'vertical'
    spacing: '10'
    BoxLayout:
        size_hint: (1,7)
    MyTextInput:
        id: firstNameTextInput
        write_tab: False
        multiline: False
        hint_text: 'First Name'
        size_hint: (0.3, 1)
        pos_hint: {'center_x':0.5}
    MyTextInput:
        id: lastNameTextInput
        write_tab: False
        multiline: False
        hint_text: 'Last Name'
        size_hint: (0.3, 1)
        pos_hint: {'center_x':0.5}
    MyTextInput:
        id: phoneNumberTextInput
        write_tab: False
        multiline: False
        hint_text: 'Phone Number'
        size_hint: (0.3, 1)
        pos_hint: {'center_x':0.5}
    MyTextInput:
        id: nationalCodeTextInput
        write_tab: False
        multiline: False
        hint_text: 'National ID'
        size_hint: (0.3, 1)
        pos_hint: {'center_x':0.5}
    MyButton:
        markup: True
        text: 'CREATE ACCOUNT'
        size_hint: (0.3, 1)
        pos_hint: {'center_x':0.5}
        on_release: root.createAccountCallback()
    MyButton:
        markup: True
        text: 'CANCEL'
        size_hint: (0.3, 1)
        pos_hint: {'center_x':0.5}
        on_release: root.cancelCreateAccountCallback()
    BoxLayout:
        size_hint: (1,7)