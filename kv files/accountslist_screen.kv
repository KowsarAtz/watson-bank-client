#:import C kivy.utils.get_color_from_hex

<Row@RowBoxLayout>:
    accountNumber: ''
    ownerName: ''
    ownerID: ''
    credit: ''
    status: ''

    MyLabel:
        text: root.accountNumber
        size_hint: (1.5,1)

    MyLabel:
        text: root.ownerName
        size_hint: (1.5,1)
    
    MyLabel:
        text: root.ownerID
        size_hint: (1,1)
    
    MyLabel:
        text: root.credit
        size_hint: (0.5,1)

    MyLabel:
        text: root.status
        size_hint: (0.5,1)
    
    BubbleButton:
        text: '. . .'
        on_release: root.parent.parent.parent.showLogsCallback(root.accountNumber)
        size_hint: (0.5,1)

    BubbleButton:
        text: '+'
        on_release: root.parent.parent.parent.createTransactionCallback(root.accountNumber, '+')
        size_hint: (0.5,1)

    BubbleButton:
        text: '-'
        on_release: root.parent.parent.parent.createTransactionCallback(root.accountNumber, '-')
        size_hint: (0.5,1)

<AccountsListScreen>:
    canvas:
        Color:
            rgba: C("#232130") 
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'vertical'

    BoxLayout:
        spacing: dp(5)
        orientation: 'horizontal'
        size_hint: (1, 0.11)
        padding: [10,20,10,0]

        MyButton:
            markup: True
            text: 'Back to Menu'
            size_hint: (1,1)
            on_release: root.backToMenuCallback()

        MyTextInput:
            hint_text: 'Search for Account Number, Owner Name or Owner ID . . .'
            on_text: root.searchCallback(self.text)
            size_hint: (8,1)

    BoxLayout:
        spacing: dp(1)
        orientation: 'horizontal'
        size_hint: (1, 0.1)
        padding: [20,0,30,0]

        MyTitleLabel:
            markup: True
            text: 'Account Number'
            size_hint: (1.5,1)

        MyTitleLabel:
            markup: True
            text: 'Owner Name'
            size_hint: (1.5,1)
        
        MyTitleLabel:
            markup: True
            text: 'Owner ID'
            size_hint: (1,1)
        
        MyTitleLabel:
            markup: True
            text: 'Credit'
            size_hint: (0.5,1)

        MyTitleLabel:
            markup: True
            text: 'Status'
            size_hint: (0.5,1)

        MyTitleLabel:
            markup: True
            text: 'View Logs'
            size_hint: (0.5,1)
        
        MyTitleLabel:
            markup: True
            text: 'Create Transaction'
            size_hint: (1,1)

    RecycleView:
        id: rv
        scroll_type: ['bars', 'content']
        scroll_wheel_distance: dp(114)
        bar_width: dp(10)
        viewclass: 'Row'
        RecycleBoxLayout:
            padding: [20,0,30,20]
            default_size: None, dp(56)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'
            spacing: dp(4)