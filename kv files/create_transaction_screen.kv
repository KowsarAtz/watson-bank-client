#:import utils kivy.utils
<CreateTransactionScreen>:
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#232130") 
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'vertical'
    spacing: '10'
    
    BoxLayout:
        size_hint: (1,6)

    TextInput:
        padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
        id: fromAccountTextInput
        write_tab: False
        multiline: False
        hint_text: 'Source Account ID (Leave Empty for Cash Send Transaction)'
        size_hint: (0.5, 1)
        pos_hint: {"center_x":0.5}

    TextInput:
        padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
        id: toAccountTextInput
        write_tab: False
        multiline: False
        hint_text: 'Destination Account ID (Leave Empty for Cash Receive Transaction)'
        size_hint: (0.5, 1)
        pos_hint: {"center_x":0.5}

    TextInput:
        padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
        id: transactionAmountTextInput
        write_tab: False
        multiline: False
        hint_text: 'Transaction Amount'
        size_hint: (0.5, 1)
        pos_hint: {"center_x":0.5}

    TextInput:
        id: transactionDescribtionTextInput
        write_tab: False
        multiline: True
        hint_text: 'Transaction Describtion'
        size_hint: (0.5, 3)
        pos_hint: {"center_x":0.5}

    Button:
        markup: True
        text: '[b]CREATE TRANSACTION[/b]'
        size_hint: (0.5, 1)
        pos_hint: {"center_x":0.5}
        on_release: root.createTransactionCallback()

    Button:
        markup: True
        text: '[b]CANCEL[/b]'
        size_hint: (0.5, 1)
        pos_hint: {"center_x":0.5}
        on_release: root.cancelTransactionCallback()

    BoxLayout:
        size_hint: (1,6)