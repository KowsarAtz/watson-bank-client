#:import C kivy.utils.get_color_from_hex
<CreateTransactionScreen>:
    canvas:
        Color:
            rgb: C("#232130") 
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'vertical'
    spacing: '10'
    
    BoxLayout:
        size_hint: (1,6)

    MyTextInput:
        id: fromAccountTextInput
        write_tab: False
        multiline: False
        hint_text: 'Source Account ID (Leave Empty for Cash Send Transaction)'
        size_hint: (0.5, 1)
        pos_hint: {'center_x':0.5}

    MyTextInput:
        id: toAccountTextInput
        write_tab: False
        multiline: False
        hint_text: 'Destination Account ID (Leave Empty for Cash Receive Transaction)'
        size_hint: (0.5, 1)
        pos_hint: {'center_x':0.5}

    MyTextInput:
        id: transactionAmountTextInput
        write_tab: False
        multiline: False
        hint_text: 'Transaction Amount'
        size_hint: (0.5, 1)
        pos_hint: {'center_x':0.5}

    MyTextInput:
        id: transactionDescribtionTextInput
        write_tab: False
        multiline: True
        hint_text: 'Transaction Describtion'
        size_hint: (0.5, 3)
        pos_hint: {'center_x':0.5}

    MyButton:
        markup: True
        text: 'CREATE TRANSACTION'
        size_hint: (0.5, 1)
        pos_hint: {'center_x':0.5}
        on_release: root.createTransactionCallback()

    MyButton:
        markup: True
        text: 'CANCEL'
        size_hint: (0.5, 1)
        pos_hint: {'center_x':0.5}
        on_release: root.cancelTransactionCallback()

    BoxLayout:
        size_hint: (1,6)