#:import utils kivy.utils
<MenuScreen>:
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#232130") 
        Rectangle:
            size: self.size
            pos: self.pos
    
    orientation: 'vertical'
    spacing: '10'

    BoxLayout:
        size_hint: (1,7)

    Button:
        # background_normal: ''
        # border: 30,30,30,30
        # background_color: utils.get_color_from_hex("#0c2876") 
        text: '[b][i]Register New Clerk[/i][/b]'
        markup: True
        size_hint: (0.3, 1)
        pos_hint: {"center_x":0.5}
        on_release: root.signUpClerkCallback()

    Button:
        # canvas.before:
        #     Color:
        #         rgb: utils.get_color_from_hex("#ffffff") 
        #     Rectangle:
        #         size: self.size
        #         pos: self.pos
        text: '[b][i]Accounts List[/i][/b]'
        markup: True
        size_hint: (0.3, 1)
        pos_hint: {"center_x":0.5}
        on_release: root.getAllAccountsCallback()

    Button:
        text: '[b][i]Transactions List[/i][/b]'
        markup: True
        size_hint: (0.3, 1)
        pos_hint: {"center_x":0.5}
        on_release: root.getAllTransactionsCallback()
        
    Button:
        text: '[b][i]Logout[/i][/b]'
        markup: True
        size_hint: (0.3, 1)
        pos_hint: {"center_x":0.5}
        on_release: root.logoutCallback()

    BoxLayout:
        size_hint: (1,7)