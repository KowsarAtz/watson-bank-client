#:import C kivy.utils.get_color_from_hex
<MenuScreen>:
    canvas:
        Color:
            rgb: C("#232130") 
        Rectangle:
            size: self.size
            pos: self.pos
    
    orientation: 'vertical'
    spacing: '10'

    BoxLayout:
        size_hint: (1,3)

    MyButton:
        text: 'REGISTER NEW CLERK'
        markup: True
        size_hint: (0.3, 1)
        pos_hint: {'center_x':0.5}
        on_release: root.signUpClerkCallback()

    MyButton:
        text: 'ACCOUNTS LIST'
        markup: True
        size_hint: (0.3, 1)
        pos_hint: {'center_x':0.5}
        on_release: root.getAllAccountsCallback()

    MyButton:
        text: 'CREATE TRANSACTION'
        markup: True
        size_hint: (0.3, 1)
        pos_hint: {'center_x':0.5}
        on_release: root.createTransactionCallback()

    MyButton:
        text: 'TRANSACTIONS LIST'
        markup: True
        size_hint: (0.3, 1)
        pos_hint: {'center_x':0.5}
        on_release: root.getAllTransactionsCallback()
        
    MyButton:
        text: 'LOGOUT'
        markup: True
        size_hint: (0.3, 1)
        pos_hint: {'center_x':0.5}
        on_release: root.logoutCallback()

    BoxLayout:
        size_hint: (1, 3)

    Image:
        source: './assets/payment.png'
        size_hint: (1,5)
        pos_hint: {'center_x':0.5}