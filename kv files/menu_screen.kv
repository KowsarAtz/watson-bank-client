#:import utils kivy.utils
<MenuScreen>:
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#0c1632") 
        Rectangle:
            size: self.size
            pos: self.pos
    
    orientation: 'vertical'
    spacing: '10'

    BoxLayout:
        size_hint: (1,7)

    Button:
        # background_normal: ''
        # border: 30,30,30,30
        # background_color: utils.get_color_from_hex("#0c2876") 
        text: 'REGISTER NEW CLERK'
        size_hint: (0.3, 1)
        pos_hint: {"center_x":0.5}
        on_release: root.signUpClerkCallback()

    Button:
        text: 'ACCOUNTS LIST'
        size_hint: (0.3, 1)
        pos_hint: {"center_x":0.5}
        on_release: root.getAllAccountsCallback()

    Button:
        text: 'TRANSACTIONS LIST'
        size_hint: (0.3, 1)
        pos_hint: {"center_x":0.5}
        on_release: root.getAllTransactionsCallback()
        
    Button:
        text: 'LOGOUT'
        size_hint: (0.3, 1)
        pos_hint: {"center_x":0.5}
        on_release: root.logoutCallback()

    BoxLayout:
        size_hint: (1,7)