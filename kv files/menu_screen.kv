#:import utils kivy.utils
<MenuScreen>:
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#232130") 
        Rectangle:
            size: self.size
            pos: self.pos
    
    orientation: 'vertical'
    spacing: '10'

    BoxLayout:
        size_hint: (1,3)

    Button:
        text: '[b]REGISTER NEW CLERK[/b]'
        markup: True
        size_hint: (0.3, 1)
        pos_hint: {"center_x":0.5}
        on_release: root.signUpClerkCallback()

    Button:
        text: '[b]ACCOUNTS LIST[/b]'
        markup: True
        size_hint: (0.3, 1)
        pos_hint: {"center_x":0.5}
        on_release: root.getAllAccountsCallback()

    Button:
        text: '[b]CREATE TRANSACTION[/b]'
        markup: True
        size_hint: (0.3, 1)
        pos_hint: {"center_x":0.5}
        on_release: root.createTransactionCallback()

    Button:
        text: '[b]TRANSACTIONS LIST[/b]'
        markup: True
        size_hint: (0.3, 1)
        pos_hint: {"center_x":0.5}
        on_release: root.getAllTransactionsCallback()
        
    Button:
        text: '[b]LOGOUT[/b]'
        markup: True
        size_hint: (0.3, 1)
        pos_hint: {"center_x":0.5}
        on_release: root.logoutCallback()

    BoxLayout:
        size_hint: (1, 3)

    Image:
        source: './assets/payment.png'
        size_hint: (1,5)
        pos_hint: {"center_x":0.5}