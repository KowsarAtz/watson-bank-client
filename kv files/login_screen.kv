#:import C kivy.utils.get_color_from_hex
<LoginScreen>:
    canvas:
        Color:
            rgb: C("#232130") 
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'vertical'
    spacing: '10'
    
    BoxLayout:
        size_hint: (1,3)

    MyTextInput:
        id: usernameTextInput
        write_tab: False
        multiline: False
        hint_text: 'Username'
        size_hint: (0.3, 1)
        pos_hint: {'center_x':0.5}
    MyTextInput:
        id: passwordTextInput
        write_tab: False
        multiline: False
        password: True
        hint_text: 'Password'
        size_hint: (0.3, 1)
        pos_hint: {'center_x':0.5}
    MyButton:
        markup: True
        text: 'LOGIN'
        size_hint: (0.3, 1)
        pos_hint: {'center_x':0.5}
        on_release: root.loginCallback()

    BoxLayout:
        size_hint: (1,2)

    Image:
        source: './assets/payment.png'
        size_hint: (1,5)
        pos_hint: {'center_x':0.5}