#:import utils kivy.utils
<LoginScreen>:
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#232130") 
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'vertical'
    spacing: '10'
    
    BoxLayout:
        size_hint: (1,3)

    TextInput:
        padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
        id: usernameTextInput
        write_tab: False
        multiline: False
        hint_text: 'Username'
        size_hint: (0.3, 1)
        pos_hint: {"center_x":0.5}
    TextInput:
        padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
        id: passwordTextInput
        write_tab: False
        multiline: False
        password: True
        hint_text: 'Password'
        size_hint: (0.3, 1)
        pos_hint: {"center_x":0.5}
    Button:
        markup: True
        text: '[b]LOGIN[/b]'
        size_hint: (0.3, 1)
        pos_hint: {"center_x":0.5}
        on_release: root.loginCallback()

    BoxLayout:
        size_hint: (1,2)

    Image:
        id: ChartImageId
        source: './assets/payment.png'
        size_hint: (1,7)
        pos_hint: {"center_x":0.5}