#:import C kivy.utils.get_color_from_hex
<LogsScreen>:
    canvas:
        Color:
            rgb: C("#232130") 
        Rectangle:
            size: self.size
            pos: self.pos
    
    orientation: 'vertical'
    spacing: dp(1)

    MyLabel:
        id: ChartLabel
        text: 'chart label'
        size_hint: (1,0.1)
        markup: True

    Image:
        id: ChartImageId
        source: './assets/chart.png'
        # size: self.texture_size
        size_hint: (0.9,0.9)
        pos_hint: {'center_x':0.5}

    BoxLayout:
        orientation: 'horizontal'
        spacing: dp(2)
        size_hint: (0.2, 0.07)
        pos_hint: {'center_x':0.5}

        MyButton:
            text: 'Back To Accounts List'
            on_release: root.backToAccountsListScreenCallback()
    
    BoxLayout:
        size_hint: (1, 0.1)